<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liu.sourceProject.easyExcel.dao.StudentDao">

    <resultMap type="com.liu.sourceProject.easyExcel.entity.Student" id="StudentMap">
        <result property="id" column="id" jdbcType="OTHER"/>
        <result property="studentName" column="student_name" jdbcType="VARCHAR"/>
        <result property="studentNumber" column="student_number" jdbcType="VARCHAR"/>
        <result property="collegeName" column="college_name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="StudentMap">
        select
          id, student_name, student_number, college_name
        from batch_message.student
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="StudentMap">
        select
          id, student_name, student_number, college_name
        from batch_message.student
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="StudentMap">
        select
        id, student_name, student_number, college_name
        from batch_message.student
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="studentName != null and studentName != ''">
                and student_name = #{studentName}
            </if>
            <if test="studentNumber != null and studentNumber != ''">
                and student_number = #{studentNumber}
            </if>
            <if test="collegeName != null and collegeName != ''">
                and college_name = #{collegeName}
            </if>
        </where>
    </select>

    <insert id="batchInsert" >
        insert into student(student_name,college_name,student_number) values
        <foreach collection="list" item="student" index="index" separator=",">
            (#{student.studentName},#{student.collegeName},#{student.studentNumber})
        </foreach>
    </insert>

    <select id="findByNames" resultType="java.lang.String">
        select student_name from student where student_name in
        <foreach collection="list" item="collegeName" index="index" open="(" close=")" separator=",">
            #{collegeName}
        </foreach>
    </select>

    <select id="findByStudentNumbers" resultType="java.lang.Long">
        select student_number from student where student_number in
        <foreach collection="list" item="studentNumber" index="index" open="(" close=")" separator=",">
            #{studentNumber}
        </foreach>
    </select>
    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into batch_message.student(student_name, student_number, college_name)
        values (#{studentName}, #{studentNumber}, #{collegeName})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update batch_message.student
        <set>
            <if test="studentName != null and studentName != ''">
                student_name = #{studentName},
            </if>
            <if test="studentNumber != null and studentNumber != ''">
                student_number = #{studentNumber},
            </if>
            <if test="collegeName != null and collegeName != ''">
                college_name = #{collegeName},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from batch_message.student where id = #{id}
    </delete>

</mapper>